###############################################
# .env.example (do NOT commit real secrets)   #
###############################################

# Copy this file to .env and replace placeholder values.
# Keep N8N_ENCRYPTION_KEY stable across redeploys to decrypt existing credentials.

# PostgreSQL (local docker-compose usage; Render injects managed DB values)
POSTGRES_USER=n8n
POSTGRES_PASSWORD=change_this_password
POSTGRES_DB=n8n

# n8n Database Config (compose will interpolate; Render uses render.yaml)
DB_TYPE=postgresdb
DB_POSTGRESDB_HOST=postgres
DB_POSTGRESDB_PORT=5432
DB_POSTGRESDB_DATABASE=${POSTGRES_DB}
DB_POSTGRESDB_USER=${POSTGRES_USER}
DB_POSTGRESDB_PASSWORD=${POSTGRES_PASSWORD}
# If you want to use an external Postgres instance (for example Neon), you
# can set the full connection URL here instead of the individual DB_* fields.
# Example:
# DB_POSTGRESDB_CONNECTION_URL=postgresql://user:password@host:5432/dbname?sslmode=require

# Authentication for UI / REST API
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=you@example.com
N8N_BASIC_AUTH_PASSWORD=change_this_password

# Encryption (generate 32+ char hex and KEEP IT THE SAME after first deploy)
# python -c "import secrets; print(secrets.token_hex(16))"
N8N_ENCRYPTION_KEY=replace_with_32_char_hex
N8N_USER_MANAGEMENT_JWT_SECRET=replace_with_random_secret

# Binary data mode (filesystem recommended for local; on Render leave default DB)
N8N_DEFAULT_BINARY_DATA_MODE=filesystem

# External URL / Host settings (adjust for your domain)
WEBHOOK_URL=https://your-n8n-domain.example.com
N8N_HOST=your-n8n-domain.example.com
N8N_PROTOCOL=https
N8N_TRUST_PROXY=true
TRUST_PROXY=true

# Logging & diagnostics
N8N_LOG_LEVEL=info
N8N_DIAGNOSTICS_ENABLED=false
N8N_PERSONALIZATION_ENABLED=false
N8N_METRICS=false
N8N_ENFORCE_SETTINGS_FILE_PERMISSIONS=true

# Ollama host (local compose) - for Mac running host Ollama, uncomment below
OLLAMA_HOST=ollama:11434
# OLLAMA_HOST=host.docker.internal:11434

# Optional flags used by import/export helper scripts (override per invocation)
# N8N_BASE_URL= # e.g. https://your-n8n.onrender.com
# N8N_SKIP_WORKFLOWS=1
# N8N_SKIP_CREDENTIALS=1

# End of file


